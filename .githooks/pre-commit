#!/bin/sh

# 1. Format Check
# If code is messy, this fails and tells you to run 'deno fmt'
echo "ğŸ¨ Checking formatting..."
deno fmt --check

if [ $? -ne 0 ]; then
  echo "âŒ Formatting check failed! Run 'deno fmt' to fix it."
  exit 1
fi

# 2. Lint Check
# If code has bad patterns (like unused vars), this fails
echo "ğŸ§¹ Checking for lint errors..."
deno lint

if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed! Fix the errors above."
  exit 1
fi

# If we got here, everything is good!